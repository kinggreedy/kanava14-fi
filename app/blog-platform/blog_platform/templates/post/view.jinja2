{% extends "../layout.jinja2" %}

{% block content %}
<div class="content">
    <h1>{{ entry.title }}</h1>
    <hr/>
    <p>{{ entry.body }}</p>
    <hr/>
    <p>Created <strong title="{{ entry.created }}">
        {{ entry.created_in_words }}</strong> ago</p>

    <p><a href="{{ request.route_url('index') }}">Go Back</a> ::
        <a href="{{ request.route_url('post_action', action='edit',
        _query={'id':entry.id}) }}">Edit entry</a>

    </p>
</div>
{% endblock content %}
