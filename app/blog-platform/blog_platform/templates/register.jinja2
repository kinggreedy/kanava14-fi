{% extends "layout.jinja2" %}

{% block html_sub_title %}
  - Register
{% endblock html_sub_title %}

{% block content %}
<div class="content">
    <form action="{{ request.route_path('register') }}" method="post" class="form form-register">
        <div class="form-group">
            {{ form.name.label }}
            {% for error in form.name.errors %}
                <div class="text-danger">{{ error }}</div>
            {% endfor %}
            {{ form.name(class_='form-control') }}
        </div>

        <div class="form-group">
            {{ form.username.label }}
            {% for error in form.username.errors %}
                <div class="text-danger">{{ error }}</div>
            {% endfor %}
            {{ form.username(class_='form-control', placeholder=form.username.description) }}
        </div>

        <div class="form-group">
            {{ form.password.label }}
            {% for error in form.password.errors %}
                <div class="text-danger">{{ error }}</div>
            {% endfor %}
            {{ form.password(class_='form-control', placeholder=form.password.description) }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </form>
</div>
{% endblock content %}
